{
    "name": "blade-cn/bladecn-laravel",
    "description": "This package provides artisan commands to interact with your registry",
    "keywords": [
        "blade-cn",
        "laravel",
        "bladecn-cli",
        "bladecn-laravel"
    ],
    "homepage": "https://github.com/blade-cn/bladecn-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "G4b0rDev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^11.0||^12.0",
        "laravel/prompts": "^0.3.6",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bladecn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bladecn\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@prepare"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage --compact --min=90",
        "test-type-coverage": "vendor/bin/pest --type-coverage --compact --min=90",
        "format": "vendor/bin/pint",
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "check": [
            "@test",
            "@test-coverage",
            "@test-type-coverage",
            "@format",
            "@lint"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bladecn\\BladecnServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
